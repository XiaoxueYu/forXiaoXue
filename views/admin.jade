extends layout
//index在服务端渲染文件
block content
	.container
		.row
        form.form-horizontal(method="post",action="/admin/movie")
            input(type="hidden",name="menu[_id]",value="#{menu._id}")
            .form-group
                label.col-sm-2.control-label(for="inputTitle") 菜单名字
                .col-sm-10
                  input#inputTitle.form-control(type="text" name="movie[title]"，value="#{movie.title}")
            .form-group
                label.col-sm-2.control-label(for="inputClass") 菜单分类
                .col-sm-10
                  select#inputClass.form-control(type="text" name="movie[class]"，value="#{movie.class}")
            .form-group
                    label.col-sm-2.control-label(for="inputCountry") 价格
                    .col-sm-10
                        input#inputMoney.form-control(type="text" name="movie[money]"，value="#{movie.money}")
            .form-group
                label.col-sm-2.control-label(for="inputPicture") 图片
                .col-sm-10
                    input#inputPicture.form-control(type="text" name="movie[picture]"，value="#{movie.picture}")
            
            .form-group
                .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type="submit") 录入